@using PidroCounter.NET.Services
@inject PidroCounterStateService PcService

<div class="d-flex flex-row h-inherit w-inherit bg-pidrocounter">
    <CascadingValue Value="_team1Id">
        <TeamPanel />
    </CascadingValue>
    <CenterPanel Team1Id="_team1Id" Team2Id="_team2Id" />
    <CascadingValue Value="_team2Id">
        <TeamPanel />
    </CascadingValue>
</div>

@code {
    private int _team1Id;
    private int _team2Id;

    protected override void OnInitialized()
    {
        _team1Id = PcService.RegisterTeam("We");
        _team2Id = PcService.RegisterTeam("They");
    }
}
